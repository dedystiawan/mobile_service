<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3DCE0"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/th"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="320dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="258dp"
            android:layout_height="242dp"
            android:layout_marginStart="70dp"
            android:background="#000000"
            app:srcCompat="@drawable/jk" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5170411258"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="----------------------------------"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_twt"
                android:layout_width="48dp"
                android:layout_height="89dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/tw" />

            <Button
                android:id="@+id/btn_ig"
                android:layout_width="60dp"
                android:layout_height="86dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/ig" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#03A9F4"
                android:text="Hiburan"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/btn_play"
                android:layout_width="67dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/pl"
                android:textColor="#3F51B5" />

            <Button
                android:id="@+id/btn_pause"
                android:layout_width="57dp"
                android:layout_height="54dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/ps" />

            <Button
                android:id="@+id/btn_stop"
                android:layout_width="57dp"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/st" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>